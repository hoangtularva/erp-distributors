<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("image") %>
                <th width='15%'><%= t('image') %></th>
            <% end %>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_products_brands.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("address") %>
                <th>
                    <%= t('.address') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("open_time") %>
                <th><%= t('open_time') %></th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th><%= t('status') %></th>
            <% end %>
            <% if get_columns(params).include?("latitude") %>
                <th><%= t('latitude') %></th>
            <% end %>
            <% if get_columns(params).include?("longitude") %>
                <th><%= t('longitude') %></th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th><%= t('creator') %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_products_brands.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%" class="sortable text-nowrap" sort-by='erp_distributors_distributors.custom_order'>
                <%= t('custom_order') %>
            </th>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @distributors.each do |distributor| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: distributor.id) %>
                </td>
                <% if get_columns(params).include?("image") %>
                    <td>
                        <%= erp_component('image', {
                            object: distributor
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("name") %>
                    <td>
                        <%= link_to distributor.name, erp_distributors.edit_backend_distributor_path(distributor), class: 'title' %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("category") %>
                    <td>
                        <%= link_to distributor.category_name %>                        
                    </td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                    <td>
                        <% if distributor.archived == true %>
                            <span class="label label-sm label-danger"><%= t('archived') %></span>
                        <% else %>
                            <span class="label label-sm label-success"><%= t('active') %></span>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: distributor.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= distributor.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td class="text-center text-semibold">
                    <%= erp_datalist_order_column({
                        item: distributor,
                        move_up_url: erp_distributors.move_up_backend_distributors_path(id: distributor),
                        move_down_url: erp_distributors.move_down_backend_distributors_path(id: distributor),
                        sort_by: 'erp_distributors_distributors.custom_order'
                    }) %>
                </td>
                <td class="text-right">
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_distributors.edit_backend_distributor_path(distributor)
                            },
                            {
                                text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
                                url: erp_distributors.archive_backend_distributors_path(id: distributor),
                                data_method: 'PUT',
                                hide: distributor.archived,
                                class: 'ajax-link',
                                data_confirm: t('.archive_confirm')
                            },
                            {
                                text: '<i class="fa fa-eye"></i> '+t('unarchive'),
                                url: erp_distributors.unarchive_backend_distributors_path(id: distributor),
                                data_method: 'PUT',
                                hide: !distributor.archived,
                                class: 'ajax-link',
                                data_confirm: t('.unarchive_confirm')
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_distributors.backend_distributor_path(distributor),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @distributors.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@distributors) %>
